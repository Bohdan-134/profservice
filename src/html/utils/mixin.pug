mixin advantagesItem({imgSrc, imgAlt, title, text}) 
    li.advantages-item
        img(src!=imgSrc, alt!=imgAlt)
        h4.h4= title
        .subtitle= text


mixin swiperSlide({title, text, pagesSrc, imgSrc, imgAlt})
    .swiper-slide
        .swiper-slide-text-content
            h3.h3= title
            p.subtitle= text
            a(href!=pagesSrc).btn Детальніше
        .swiper-slide-img-wrapp
            img(src!=imgSrc, alt!=imgAlt)

mixin textContentinBorder({...text})
    .container
        .block-text-content-in-border
            .text-content-in-border
                each val in text    
                    p.subtitle= val

mixin faq-item({question, answer})
    li.faq-item
        .faq-img-wrap
            include ../../img/icons/question.svg
        .faq-text-content
            h4.h4.faq-question= question
            p.subtitle.faq-answer= answer

mixin reviews({text, cssClass, reviewsLink})
    li.reviews-item
        p.subtitle= text
        a(href!= reviewsLink class!= cssClass).reviewsLink 
            .facebook-icons
                include ../../img/icons/facebook.svg